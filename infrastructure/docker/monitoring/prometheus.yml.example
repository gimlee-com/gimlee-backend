# Important note! The IPs should be replaced by actual IPs or service discovery!
global:
  scrape_interval: 15s

scrape_configs:
  - job_name: 'gimlee-api'
    metrics_path: '/actuator/prometheus'
    static_configs:
      # Application nodes on port 12060
      - targets: ['APP_IP_1:8080', 'APP_IP_2:8080']

  - job_name: 'node-exporter'
    static_configs:
      # Node Exporter running on port 9100 on ALL machines
      - targets: ['APP_IP_1:9100', 'APP_IP_2:9100', 'DB_IP:9100', 'WALLET_IP:9100']

  - job_name: 'mongodb-exporter'
    static_configs:
      # MongoDB Exporter running on the DB node
      - targets: ['DB_IP:9216']
